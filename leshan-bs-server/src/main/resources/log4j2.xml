<Configuration status="warn" strict="true" name="leshan standalone"
               packages="org.apache.logging.log4j.test">

  <Appenders>
    <RollingFile name="RollingFile" fileName="/var/log/leshan.log"
        filePattern="/var/log/leshan-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="1 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="20"/>
    </RollingFile>
    <Appender type="Console" name="STDOUT">
      <Layout type="PatternLayout" pattern="%d %p %C{1.} [%t] %m%n"/>
    </Appender>
  </Appenders>
 
  <Loggers>
    <Logger name="leshan" level="debug" additivity="false" >
      <AppenderRef ref="RollingFile"/>
    </Logger>
    <Logger name="leshan.standalone.servlet" level="debug" additivity="false">
      <AppenderRef ref="RollingFile"/>
    </Logger>
  
    <Root level="trace">
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
 
</Configuration>
